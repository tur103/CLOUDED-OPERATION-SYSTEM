HomeScreen:

    first: first
    second: second
    third: third
    fourth: fourth
    fifth: fifth

    firstv: firstv
    secondv: secondv
    thirdv: thirdv
    fourthv: fourthv
    fifthv: fifthv

    name: 'HOME'
    fullscreen: True
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            Label:
                size_hint_x: 1
            Label:
                size_hint_x: 1
                canvas.before:
                    Rectangle:
                        pos: self.center_x - 50, self.center_y - 35
                        source: root.get_picture()
                valign: 'top'
                text_size: cm(9), cm(5)
                font_size: 22
                bold: True
                text: root.get_date()
        BoxLayout:
            Label:
                size_hint_x: 3
            Button:
                size_hint_x: 1
                on_release: app.go_screen(1)
                background_color: 0, 0, 0, 0
                Image:
                    source: 'pictures\calendar.ico'
                    size: self.parent.size
                    pos: self.parent.pos
            Button:
                size_hint_x: 1
                on_release: root.open_calculator()
                background_color: 0, 0, 0, 0
                Image:
                    source: 'softwares/calculator\calculator.png'
                    size: self.parent.size
                    pos: self.parent.pos
            Button:
                size_hint_x: 1
                on_release: root.selection_updated("null")
                background_color: 0, 0, 0, 0
                Image:
                    source: 'softwares/TextEditor/data/txt.ico'
                    size: self.parent.size
                    pos: self.parent.pos
        BoxLayout:
            FileChooser:
                rootpath: 'c:/'
                path: root.get_folder()
                size_hint_x: 3
                size_hint_y: None
                height: "14.5cm"
                id: filechooser
                on_selection: root.selection_updated(self.selection)
                FileChooserIconLayout

            BoxLayout:

                size_hint_x: 1
                orientation: "vertical"

                Label:
                    size_hint_y: 1
                    canvas.before:
                        Color:
                            rgba: 0, 1, 0, 0.5
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    bold: True
                    color: 0, 0, 0, 1
                    font_size: 18
                    text: "Last Edited"
                Button:
                    id: first
                    size_hint_y: 1
                    background_color: 0, 1, 0, 0.9
                    bold: True
                    color: 0, 0, 0, 1
                    font_size: 18
                    text: root.get_last_edited(1)
                    on_press: root.execute_txt_file(1)
                Button:
                    id: second
                    size_hint_y: 1
                    background_color: 0, 1, 0, 0.9
                    bold: True
                    color: 0, 0, 0, 1
                    font_size: 18
                    text: root.get_last_edited(2)
                    on_press: root.execute_txt_file(2)
                Button:
                    id: third
                    size_hint_y: 1
                    background_color: 0, 1, 0, 0.9
                    bold: True
                    color: 0, 0, 0, 1
                    font_size: 18
                    text: root.get_last_edited(3)
                    on_press: root.execute_txt_file(3)
                Button:
                    id: fourth
                    size_hint_y: 1
                    background_color: 0, 1, 0, 0.9
                    bold: True
                    color: 0, 0, 0, 1
                    font_size: 18
                    text: root.get_last_edited(4)
                    on_press: root.execute_txt_file(4)
                Button:
                    id: fifth
                    size_hint_y: 1
                    background_color: 0, 1, 0, 0.9
                    bold: True
                    color: 0, 0, 0, 1
                    font_size: 18
                    text: root.get_last_edited(5)
                    on_press: root.execute_txt_file(5)

            BoxLayout:

                size_hint_x: 1
                orientation: "vertical"

                Label:
                    size_hint_y: 1
                    canvas.before:
                        Color:
                            rgba: 0, 0, 1, 0.5
                        Rectangle:
                            pos: self.pos
                            size: self.size
                    bold: True
                    color: 1, 1, 1, 1
                    font_size: 18
                    text: "FAV VIDEOS"
                Button:
                    id: firstv
                    size_hint_y: 1
                    background_color: 0, 0, 1, 0.9
                    bold: True
                    color: 1, 1, 1, 1
                    font_size: 16
                    text: root.get_fav_videos(1)
                    on_press: root.execute_video_file(1)
                Button:
                    id: secondv
                    size_hint_y: 1
                    background_color: 0, 0, 1, 0.9
                    bold: True
                    color: 1, 1, 1, 1
                    font_size: 16
                    text: root.get_fav_videos(2)
                    on_press: root.execute_video_file(2)
                Button:
                    id: thirdv
                    size_hint_y: 1
                    background_color: 0, 0, 1, 0.9
                    bold: True
                    color: 1, 1, 1, 1
                    font_size: 16
                    text: root.get_fav_videos(3)
                    on_press: root.execute_video_file(3)
                Button:
                    id: fourthv
                    size_hint_y: 1
                    background_color: 0, 0, 1, 0.9
                    bold: True
                    color: 1, 1, 1, 1
                    font_size: 16
                    text: root.get_fav_videos(4)
                    on_press: root.execute_video_file(4)
                Button:
                    id: fifthv
                    size_hint_y: 1
                    background_color: 0, 0, 1, 0.9
                    bold: True
                    color: 1, 1, 1, 1
                    font_size: 16
                    text: root.get_fav_videos(5)
                    on_press: root.execute_video_file(5)
            Button:
                size_hint_x: 1
                on_release: app.go_screen(2)
                background_color: 0, 0, 0, 0
                Image:
                    source: 'pictures\windows.ico'
                    size: self.parent.size
                    pos: self.parent.pos