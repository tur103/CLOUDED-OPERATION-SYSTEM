HomeScreen:

    name: 'HOME'
    fullscreen: True
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            Label:
                size_hint_x: 1
            Label:
                size_hint_x: 1
                canvas.before:
                    Rectangle:
                        pos: self.center_x - 50, self.center_y - 35
                        source: root.get_picture()
                valign: 'top'
                text_size: cm(9), cm(5)
                font_size: 22
                bold: True
                text: root.get_date()
        BoxLayout:
            Label:
                size_hint_x: 3
            Button:
                size_hint_x: 1
                on_release: app.go_screen(1)
                background_color: 0, 0, 0, 0
                Image:
                    source: 'pictures\calendar.ico'
                    size: self.parent.size
                    pos: self.parent.pos
            Button:
                size_hint_x: 1
                on_release: root.open_calculator()
                background_color: 0, 0, 0, 0
                Image:
                    source: 'softwares/calculator\calculator.png'
                    size: self.parent.size
                    pos: self.parent.pos
            Button:
                size_hint_x: 1
                on_release: root.selection_updated("null")
                background_color: 0, 0, 0, 0
                Image:
                    source: 'softwares/TextEditor/data/txt.ico'
                    size: self.parent.size
                    pos: self.parent.pos
        BoxLayout:
            FileChooser:
                rootpath: 'c:/'
                path: root.get_folder()
                size_hint_x: 3
                size_hint_y: None
                height: "14.5cm"
                id: filechooser
                on_selection: root.selection_updated(self.selection)
                FileChooserIconLayout
            Button:
                size_hint_x: 1
            Button:
                size_hint_x: 1
            Button:
                size_hint_x: 1
                on_release: app.go_screen(2)
                background_color: 0, 0, 0, 0
                Image:
                    source: 'pictures\windows.ico'
                    size: self.parent.size
                    pos: self.parent.pos