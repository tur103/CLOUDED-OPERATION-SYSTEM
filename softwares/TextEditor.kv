TxtFile:
    BoxLayout:
        canvas.before:
            Rectangle:
                pos: self.pos
                size: self.size
                source: 'background.jpg'
        orientation: "vertical"
        BoxLayout:
            size_hint_y: 1
            Label:
                size_hint_x: 1
                canvas.before:
                    Rectangle:
                        pos: self.pos
                        size: self.size
                        source: 'TXT.png'
            Label:
                size_hint_x: 1.5
                font_size: 20
                bold: True
                text: 'FILE NAME'
            TextInput:
                size_hint_x: 6
                size_hint_y: None
                height: "1cm"
                text: root.get_file_name()
        BoxLayout:
            size_hint_y: 8
            TextInput:
                text: root.get_text()
